<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded_corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="small_rounded_corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>

    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TagDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="GuideDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="rippleColor">@color/transparent</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/youtube_sans_medium</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogTheme">@style/my_dialogTheme</item>
    </style>

    <style name="my_dialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="search_view_style" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">@font/youtube_sans_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="yt_bold_20sp" parent="">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/youtube_sans_bold</item>
    </style>


    <style name="yt_bold_17sp" parent="">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/youtube_sans_bold</item>
    </style>

    <style name="source_title_style" parent="">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/youtube_sans_bold</item>
    </style>

    <style name="yt_medium_15sp" parent="">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>

    <style name="yt_medium_11sp_text" parent="">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>
    <style name="yt_medium_13sp_text" parent="">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>
    <style name="yt_medium_14sp_text" parent="">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>
    <style name="yt_medium_16sp" parent="">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>

    <style name="yt_medium_17sp" parent="">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>

    <style name="yt_medium_19sp" parent="">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
    </style>
    <style name="small_text_style" parent="">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/youtube_sans_light</item>
    </style>

    <style name="timestamp_title_style" parent="">
        <item name="fontFamily">@font/youtube_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="guide_text_style" parent="">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/youtube_sans_medium</item>
        <item name="android:textColor">@color/light_beige</item>
    </style>

</resources>