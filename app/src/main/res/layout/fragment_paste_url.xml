<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pasteurl.PasteUrlFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_paste_url"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_dialog">

        <ImageView
            android:id="@+id/image_youtube_logo"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_youtube_black"/>

        <SearchView
            android:id="@+id/searchview_paste_url"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/image_youtube_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:queryHint="Paste url here"
            android:iconifiedByDefault="false"
            android:background="@drawable/bg_search_bar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>