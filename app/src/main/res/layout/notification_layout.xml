<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/blank_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/btn_clip"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/bg_btn_in_notification"
        android:src="@drawable/ic_clip"
        android:tint="@color/ic_floating_action_btn_to_theme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:id="@+id/btn_clipping"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:background="@drawable/bg_btn_in_notification"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/rotate_clipping_animation"
        android:indeterminateTint="@color/ic_floating_action_btn_to_theme" />

    <ImageView
        android:id="@+id/btn_take_timestamp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_btn_in_notification"
        android:src="@drawable/ic_pin"
        android:tint="@color/ic_floating_action_btn_to_theme" />

</RelativeLayout>